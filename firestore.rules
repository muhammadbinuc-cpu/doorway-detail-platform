rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    match /jobs/{jobId} {
      // âœ… READ: Public (so customers can view invoices)
      allow read: if true;
      
      // ðŸ”’ WRITE: Locked (must use Server Actions)
      allow write: if false; 
    }
    
    match /clients/{clientId} {
      // Clients collection strictly for admins
      allow read, write: if request.auth != null;
    }
  }
}